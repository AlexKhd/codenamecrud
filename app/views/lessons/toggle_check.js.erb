<% if current_user.lessons.include?(@lesson) %>
  $(<%= dom_id @lesson %>).html(
    '<%= j link_to "<i class=\"glyphicon glyphicon-check\"></i>".html_safe, toggle_check_course_lesson_path(@course, @lesson), class: "mark-as-uncompleted", remote: true, method: :post %>'
    );
<% else %>
  $(<%= dom_id @lesson %>).html(
      '<%= j link_to "<i class=\"glyphicon glyphicon-unchecked\"></i>".html_safe, toggle_check_course_lesson_path(@course, @lesson), class: "mark-as-completed", remote: true, method: :post %>'
    );
<% end %>
